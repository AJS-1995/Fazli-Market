@model AccountManagement.Application.Contracts.ReceiptRent.ReceiptRentCreate
@{
}
<div class="modal-header">
    <h4 class="modal-title">ثبت پرداخت کرایه دوکان - @Model.Location _ @Model.Shop</h4>
</div>

<form class="needs-validation" novalidate asp-page="./Index" asp-page-handler="Create" method="post">
    <div class="modal-body">
        <div class="row">
            <input asp-for="Shop_Id" type="hidden">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="form-label" for="ForRent_Id">کرایه کننده</label>
                    <input value="@Model.ForRentName _ @Model.ForRentCompany" disabled type="text" class="form-control">
                    <input id="ForRent_Id" asp-for="ForRent_Id" type="hidden" class="form-control">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="form-label" for="Rent">کرایه</label>
                    <input value="@Model.Rent" readonly type="text" class="form-control">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="form-label" for="Money_Id">واحد</label>
                    <input value="@Model.Money" disabled type="text" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="form-label" for="Date">تاریخ پرداخت</label>
                    <input id="Date" dir="ltr" required class="form-control input-mask" asp-for="Date"
                           data-inputmask="'alias': 'datetime'" data-inputmask-inputformat="yyyy/mm/dd" im-insert="false" placeholder="yyyy/mm/dd">
                    <div class="invalid-feedback">اطلاعات باید وارد شود !</div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="form-label" for="By">توسط</label>
                    <input id="By" asp-for="By" required type="text" class="form-control">
                    <div class="invalid-feedback">اطلاعات باید وارد شود !</div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="form-label" for="PayBox_Id">خزانه</label>
                    <select class="form-control" required asp-for="PayBox_Id" id="PayBox_Id"
                            asp-items='new SelectList(Model.PayBoxs, "Id", "Name")'>
                        <option disabled value="" selected="">خزانه ...</option>
                    </select>
                    <div class="invalid-feedback">اطلاعات باید وارد شود !</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="form-label" for="Shop_Rest">حساب</label>
                    <input id="Shop_Rest" value="@Model.ForRentRest" disabled type="text" class="form-control text-start">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="form-label" for="Years">سال</label>
                    <input id="Years" asp-for="Years" maxlength="4" required type="text" class="form-control input-mask text-start" data-inputmask="'alias': 'numeric'">
                    <div class="invalid-feedback">اطلاعات باید وارد شود !</div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="form-label" for="Months">ماه</label>
                    <select class="form-control" required asp-for="Months" id="Months">
                        <option disabled value="" selected="">ماه ...</option>
                        <option value="1">حمل</option>
                        <option value="2">ثور</option>
                        <option value="3">جوزا</option>
                        <option value="4">سرطان</option>
                        <option value="5">اسد</option>
                        <option value="6">سنبله</option>
                        <option value="7">میزان</option>
                        <option value="8">عقرب</option>
                        <option value="9">قوس</option>
                        <option value="10">جدی</option>
                        <option value="11">دلو</option>
                        <option value="12">حوت</option>
                    </select>
                    <div class="invalid-feedback">اطلاعات باید وارد شود !</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="form-label" for="Shop_Amount">مبلغ</label>
                    <input id="Shop_Amount" asp-for="Shop_Amount" required type="text" class="form-control input-mask text-start" data-inputmask="'alias': 'numeric'">
                    <div class="invalid-feedback">اطلاعات باید وارد شود !</div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-sm btn-icon btn-outline-success"><i class="fa fa-save"></i> & <i class="fa fa-print"></i></button>
            <a class="btn btn-sm btn-icon btn-outline-warning" asp-page="./Index" asp-route-id="@Model.Shop_Id">
                <i class="fa fa-close"></i>
            </a>
        </div>
    </div>
</form>
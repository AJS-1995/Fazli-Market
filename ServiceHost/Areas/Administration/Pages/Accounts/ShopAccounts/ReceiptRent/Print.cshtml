@page
@model ServiceHost.Areas.Administration.Pages.Accounts.ShopAccounts.ReceiptRent.PrintModel
@using _0_Framework.Application;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="سیستم حسابداری | مارکیت فاضلی">
    <meta name="author" content="عبدالجبار سروری">
    <link rel="icon" href="~/favicon.ico">
    <title> سیستم حسابداری | مارکیت فاضلی </title>
    <link rel="stylesheet" href="~/Theme/assets/vendor_components/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/Theme/material-rtl/css/bootstrap-extend.css">
    <link rel="stylesheet" href="~/Theme/material-rtl/css/master_style.css">
    <link rel="stylesheet" href="~/Theme/material-rtl/css/skins/_all-skins.css">

</head>
<body class="hold-transition skin-info-light sidebar-mini fixed rtl">
<h3 class="text-center mb-15">رسید کرایه دوکانهای مارکیت فاضلی</h3>
    <input type="hidden" id="Shop_Id" value="@Model.receiptRent.Shop_Id" />
    <hr />
    <div class="row px-15">
        <label id="Date_Rrad" dir="ltr" class="form-label col-6">تاریخ پرداخت _ : @Model.receiptRent.Date</label>
        <label id="Date_Pay" dir="ltr" class="form-label col-6">شماره فاکتور _ : @Model.receiptRent.ReceiptNumber</label>
    </div>
    <hr />
    <div class="row px-15">
        <label id="Date_Rrad" dir="ltr" class="form-label col-6">دوکاندار _ : @Model.receiptRent.ForRentName</label>
        <label id="Date_Pay" dir="ltr" class="form-label col-6">نمبر دوکان _ : @Model.receiptRent.Location - @Model.receiptRent.Shop</label>
    </div>
    <hr />
    <div class="row px-15">
        <label id="Date_Pay" dir="ltr" class="form-label col-6">مبلغ کرایه _ : @Model.receiptRent.ForRentRest.ToMoneyi() - @Model.receiptRent.Money</label>
        <label id="Date_Rrad" class="form-label col-6">خزانه _ : @Model.receiptRent.By</label>
    </div>
    <hr />
    <div class="row px-15">
        <label id="Date_Rrad" dir="ltr" class="form-label col-6">ماه - سال _ : @Model.receiptRent.Months - @Model.receiptRent.Years</label>
        <label id="Date_Pay" dir="ltr" class="form-label col-6">باقی مانده حساب _ : @Model.receiptRent.Rest - @Model.receiptRent.Money</label>
    </div>
    <hr />
    <div class="row px-15">
        <label id="Date_Rrad" dir="ltr" class="form-label col-6">مبلغ پرداخت عدد _ : @Model.receiptRent.RentRest.ToMoneyi() - @Model.receiptRent.Money</label>
        <label id="Date_Rrad" dir="ltr" class="form-label col-6">مبلغ پرداخت حروف _ : @Model.receiptRent.Total_Persian - @Model.receiptRent.Money</label>
    </div>
    <hr />
    <div class="row px-15">
        <label id="Date_Rrad" class="form-label text-center pb-15 col-12">محل امضاء و مهر</label>
    </div>
    <script>
        loadEventListeners();
        function loadEventListeners() {
            prints();
        }
        function prints() {
            window.print();

            onafterprint = function () {
                var shopid = document.getElementById("Shop_Id").value;
                window.location.href = "/Administration/Accounts/ShopAccounts/ReceiptRent/" + shopid;
            }
        }
    </script>
</body>
</html>
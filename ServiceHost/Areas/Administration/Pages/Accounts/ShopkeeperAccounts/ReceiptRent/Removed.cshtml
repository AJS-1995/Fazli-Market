@model AccountManagement.Application.Contracts.Shop_For_Rent.Removed
@using _0_Framework.Application;
@{
}
<div class="modal-header">
    <h4 class="modal-title">لیست پرداخت کرایه های حذف شده</h4>
    <a class="btn btn-sm btn-icon btn-outline-warning" asp-page="./Index" asp-route-id="@Model.Id"><i class="fa fa-close"></i></a>
</div>

<div class="modal-body">
    <div class="table-responsive">
        <table id="example" class="table table-bordered table-hover display nowrap margin-top-10 w-p100">
            <thead class="table-Primary">
                <tr>
                    <th class="text-center">تاریخ</th>
                    <th class="text-center">دوکان</th>
                    <th class="text-center">توسط</th>
                    <th class="text-center">مبلغ</th>
                    <th class="text-center">واحد</th>
                    <th class="text-center">خرانه</th>
                    <th class="text-center">عملیات</th>
                </tr>
            </thead>
            <tbody id="tbody">
                @foreach (var item in Model.Receipts)
                {
                    <tr>
                        <td class="text-center">@item.Date</td>
                        <td class="text-center">@item.Location - @item.Shop</td>
                        <td class="text-center">@item.By</td>
                        <td class="text-center">@item.Shop_Amount.ToMoneyi()</td>
                        <td class="text-center">@item.Money</td>
                        <td class="text-center">@item.PayBox</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-icon btn-danger" title="بازیابی" asp-page="./Index" asp-page-handler="Activate" asp-route-id="@item.Id">
                                <i class="fa fa-repeat"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script src="~/Theme/assets/vendor_components/formatter/formatter.js"></script>
    <script src="~/Theme/assets/vendor_components/formatter/jquery.formatter.js"></script>
    <script src="~/Theme/material-rtl/js/pages/formatter.js"></script>
}

@model AccountManagement.Application.Contracts.Electrical_System.Box_Meter.MeterRemoved
@using _0_Framework.Application;
@{
}
<div class="modal-header">
    <h4 class="modal-title">لیست متر های حذف شده</h4>
    <a class="btn btn-sm btn-icon btn-outline-warning" asp-page="./Index">
        <i class="fa fa-close"></i>
    </a>
</div>

<div class="modal-body">
    <table id="example" class="table table-bordered table-hover display nowrap margin-top-10 w-p100">
        <thead class="table-Primary">
            <tr>
                <th class="text-center">نام صندوق</th>
                <th class="text-center">نام</th>
                <th class="text-center">کد</th>
                <th class="text-center">درجه</th>
                <th class="text-center">حالت</th>
                <th class="text-center">الباقی حساب</th>
                <th class="text-center">عملیات</th>
            </tr>
        </thead>
        <tbody id="tbody">
            @foreach (var item in Model.Shared_Meters)
            {
                <tr>
                    <td class="text-center">@item.BoxMeter</td>
                    <td class="text-center">@item.Name</td>
                    <td class="text-center">@item.Cod</td>
                    <td class="text-center">@item.Grade</td>
                    @if (item.Use == true)
                    {
                        <td class="text-center">فعال</td>
                    }
                    else
                    {
                        <td class="text-center">غیرفعال</td>
                    }
                    @if (item.Rest == 0)
                    {
                        <td class="text-center text-warning">@item.Rest.ToMoney()</td>
                    }
                    else if (item.Rest > 0)
                    {
                        <td class="text-center text-info">@item.Rest.ToMoney()</td>
                    }
                    else
                    {
                        <td class="text-center text-secondary">@item.Rest.ToMoney()</td>
                    }
                    <td class="text-center">
                        <a class="btn btn-sm btn-icon btn-danger" title="بازیابی" asp-page="./Index" asp-page-handler="Activate" asp-route-id="@item.Id">
                            <i class="fa fa-repeat"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script src="~/Theme/assets/vendor_components/formatter/formatter.js"></script>
    <script src="~/Theme/assets/vendor_components/formatter/jquery.formatter.js"></script>
    <script src="~/Theme/material-rtl/js/pages/formatter.js"></script>
}
@model AccountManagement.Application.Contracts.Account.ChangePassword
@{
}
<div class="modal-header">
    <h4 class="modal-title">تغییر کلمه رمز - @Model.FullName</h4>
</div>

<form class="needs-validation" novalidate asp-page="./Index" asp-page-handler="ChangePassword" method="post">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Password" class="form-label">کلمه رمز</label>
                    <input type="password" class="form-control" required asp-for="Password">
                    <div class="invalid-feedback">اطلاعات باید وارد شود !</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="RePassword" class="form-label">تکرار کلمه رمز</label>
                    <input type="password" class="form-control" required asp-for="RePassword">
                    <div class="invalid-feedback">اطلاعات باید وارد شود !</div>
                </div>
            </div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-sm btn-icon btn-outline-success"><i class="fa fa-save"></i></button>
            <a class="btn btn-sm btn-icon btn-outline-warning" asp-page="./Index"><i class="fa fa-close"></i></a>
        </div>
    </div>
</form>